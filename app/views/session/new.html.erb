<div style="margin: 30px 60px" >
    <%= form_tag signin_path do %>
        <%= label_tag 'eMail: ' %>
        <%= text_field_tag :email %>

        <%= label_tag 'Password: ' %>
        <%= password_field_tag :password %>

        <%= submit_tag 'Sign In'%>

    <% end %>
            
    <p><%= link_to 'Sign Up', signup_path %></p>
    
    <p><a href="/auth/facebook"><img src="/assets/fb_logo.png"></a>
</div>