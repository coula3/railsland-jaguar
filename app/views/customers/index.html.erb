<h2 style="color: blue">Customers</h2>

<table>
    <thead>
        <tr>
            <th>&nbsp</th>
            <th>Full name</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>Service Insurance</th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each.with_index(1) do |customer, index| %>
            <tr>
                <td><%= index %></td>
                <td><%= link_to full_name(customer), customer_path(customer), :title => 'Customer Profile' %></td>
                <td><%= customer.email %></td>
                <td><%= customer.telephone %></td>
                <td><%= customer.has_service_insurance? %></td>
                <td><%= link_to 'View', customer_path(customer) %></td>
                <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                <% if current_user.admin %>
                    <td style="text-align: left"><%= link_to "Delete", customer, method: :delete, data: { confirm: delete_confirmation_msg } %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>

<div>
    <span style="margin-right: 5px"><%= link_to 'My Workspace', user_workspace_path %></span>
    <span style="margin-right: 5px"><%= link_to 'New Customer', new_customer_path %></span>
</div>