<div class="main-container">
    <div>
        <% if !@customer.id %>
            <h2>Create New Customer</h2> 
        <% else %>
            <h2>Edit Customer Information</h2>
        <% end %>
    </div>
    <div class="main-data">
        <%= form_for(@customer) do |f| %>
            <%= f.text_field :first_name, placeholder: "first name" %>
            <%= f.text_field :last_name, placeholder: "last name" %>
            <%= f.text_field :email, placeholder: "email", size: 23 %>
            <%= f.text_field :telephone, placeholder: "555-555-5555", size: 12 %>
            <%= f.label 'Service Insurance' %>
            <%= f.select :service_insurance, select_service_insurance %>

            <%= f.submit %>
        <% end %>
    </div>

    <div class="bottom-navs">
        <span style="margin-right: 5px"><%= user_workspace %></span>
        <span style="margin-right: 5px"><%= service_customers if !@customer.id %></span> 
        <span style="margin-right: 5px"><%= link_to "Customer's Profile", customer_path(@customer) if !!@customer.id %></span>
    </div>
</div>

