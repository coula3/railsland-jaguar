<div class="main-container">
    <div>
        <h2>Customers with Service Insurance</h2>
    </div>

    <div class="main-data">
        <table style="width: 50%">
            <thead>
                <tr>
                    <th>&nbsp</th>
                    <th>Name</th>
                    <th>Appointments</th>
                </tr>
            </thead>
            <tbody>
                <% @customers_with_service_insurance.each.with_index(1) do |customer, index| %>
                    <tr>
                        <td><%= index %></td>
                        <td><%= full_name(customer) %></td>
                        <td><%= customer.appointments.count %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <div>
        <span style="margin-right: 5px"><%= user_workspace %></span>
        <span style="margin-right: 5px"><%= link_to 'Service Customers', customers_path %></span>
    </div>
</div>