<div class="main-container">
    <div class="main-data">
        <div>
            <% if !@appointment.id %>
                <h2>Create New Appointment</h2> 
            <% else %>
                <h2>Edit Appointment</h2>
            <% end %>
        </div>
       
        <h3>Customer - <%= link_to full_name(@customer), customer_path(@customer) %></h3>

        <%= render 'customers/app_customer_data' %><br>

        <% if @appointment.errors.any? %>
            <div id="error_explanation">
                <ul>
                    <% @appointment.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div style="margin-top: 25px">
            <%= form_for(@appointment) do |f| %>
                <label style="color: blue"><strong><%=!f.object.id ? "Select" : "Edit"%> Vehicle Service</strong></label>

                <br><br>
                <%= f.collection_radio_buttons :service_id, Service.all, :id, :name %><br><br><br>

                <label style="color: blue"><strong><%=!f.object.id ? "Enter" : "Edit"%> Appointment Details</strong></label><br><br>
                <%= f.date_field :date %>
                <%= f.time_field :time %>
                <%= f.select  :veh_model, veh_models, {:include_blank => "--select vehicle model--"} %>
                <%= f.select  :model_year, model_years, {:include_blank => "--select model year--"} %>
                <%= f.select :status, select_status %>
                <%= f.hidden_field :customer_id %>
                <%= f.submit %>
            <% end %>
        </div>
    </div>

    <div class="bottom-navs">
        <span style="margin-right: 5px"><%= user_workspace %></span>
        <span style="margin-right: 5px"><%= customer_appointments(@appointment.customer) %></span>
    </div>
</div>