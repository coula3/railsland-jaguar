<div class="main-container">

    <h2>Vehicle Services</h2>

    <div class="main-data">
        <table>
            <thead>
                <tr>
                    <th>&nbsp</th>
                    <th>Name</th>
                    <th>&nbsp</th>
                    <th>&nbsp</th>
                </tr>
            </thead>
            <% @services.each.with_index(1) do |service, index| %>
                <tbody>
                    <tr>
                        <td style="text-align: center"><%= index %></td>
                        <td><%= service.name %></td>
                        <% if current_user.admin %>
                            <td style="text-align: center"><%= link_to 'Edit', edit_service_path(service) %></td>
                            <td style="text-align: center"><%= link_to "Delete", service, method: :delete, data: { confirm: delete_confirmation_msg } %></td>
                        <% end %>
                    </tr>
                </tbody>
            <% end %>
        </table>
    </div>

    <div>
        <span style="margin-right: 5px"><%= user_workspace %></span>
        <span style="margin-right: 5px"><%= link_to 'New Service', new_service_path %></span>
    </div>
</div>