<div id="signin_div">
    <div id="signin_form_div">
        <%= form_tag signin_path do %>
            <p>
                <%= text_field_tag :email, nil, class: "signin_inputs", placeholder: "email" %>
            </p>
            <p>
                <%= password_field_tag :password, nil, class: "signin_inputs", placeholder: "password" %>
            </p>

            <% if flash[:notice] %>
                <span id="signin_span_errors">
                    <%= notice %>
                </span>
            <% end %>

            <p id="signin_btn_p">
                <%= submit_tag("Sign In", id: "signin_btn") %>
            </p>
        <% end %>
                
        <p>
            <%= link_to 'Sign Up', signup_path, id: "signup_link" %>
        </p>
        
        <p id="facebook_p">
            <a href="/auth/facebook"><img src="/assets/facebook_login.jpeg" alt="Continue with Facebook" id="facebook_img"></a>
        </p>
    </div>
</div>