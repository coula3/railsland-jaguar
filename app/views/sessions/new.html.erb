
<div style="margin: 600px 100px 25px 100px">
    <%= render 'flash_messages' %>
    
    <div style="text-align: center; padding-top: 20px">
        <%= form_tag signin_path do %>
            <%= text_field_tag :email, nil, placeholder: "email", size: 30 %>

            <%= password_field_tag :password, nil, placeholder: "password", size: 30 %>

            <%= submit_tag 'Sign In' %>

        <% end %>
                
        <p><%= link_to 'Sign Up', signup_path, :style=> "color: black"%></p>
        
        <div style="margin: 25px 0px 10px 0px"><a href="/auth/facebook"><img src="/assets/facebook_login.jpeg" alt="Continue with Facebook" width="200" height="25"></div>
    </div>
</div>