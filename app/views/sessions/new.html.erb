<div class="main-container">
    <div style="text-align: center; border-style: solid; border-width: thin; padding-top: 20px">
        <%= form_tag signin_path do %>
            <%= text_field_tag :email, nil, placeholder: "email", size: 30 %>

            <%= password_field_tag :password, nil, placeholder: "password", size: 30 %>

            <%= submit_tag 'Sign In'%>

        <% end %>
                
        <p><%= link_to 'Sign Up', signup_path %></p><br>
        
        <p><a href="/auth/facebook"><img src="/assets/fb_logo.png"></a>
    </div>
</div>