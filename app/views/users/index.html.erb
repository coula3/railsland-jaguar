<div class="main-container">
    <div>
        <h2>System Users</h2>
    </div>

    <div class="main-data">
        <table>
            <thead>
                <tr>
                    <th>&nbsp</th>
                    <th style="text-align: left">Name</th>
                    <th style="text-align: left">Email</th>
                    <th style="text-align: left">Position</th>
                    <th style="text-align: center">Status</th>
                    <th style="text-align: center">Admin</th>
                </tr>
            </thead>
            <% @users.each.with_index(1) do |user, index| %>
                <tbody>
                    <tr>
                        <td style="text-align: left"><%= index%></td>
                        <td style="text-align: left"><%= link_to full_name(user), user_path(user), :title => 'User Profile' %></td>
                        <td style="text-align: left"><%= user.email %></td>
                        <td style="text-align: left"><%= user.position %></td>
                        <td style="text-align: center; width: 20px"><%= user.status %></td>
                        <td style="text-align: center; width: 15px"><%= user.admin? %></td>
                        <td style="text-align: center; width: 15px"><%= link_to 'Edit', admin_edit_path(user) %></td>
                        <% if user != current_user %>
                        <td style="text-align: center; width: 15px"><%= link_to "Delete", user, method: :delete, data: { confirm: delete_confirmation_msg } %></td>
                        <% end %>
                    </tr>
                </tbody>
            <% end %>
        </table>
    </div>

    <div class="bottom-navs">
        <span style="margin-right: 5px"><%= user_workspace %></span>
    <div>
</div>