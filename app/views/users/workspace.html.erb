<div class="main-container">
    <div id="my_workspace">
        <h1 id="workspace_h1"><%= user_first_name %> Workspace</h1>
    
        <% if flash[:notice] %>
            <div id="workspace_msg_div">
                <span id="workspace_notice_span"><%= notice %></span>
            </div>
        <% end %>

        <div id="workspace_link_div">
            <% if !@user.first_name.blank? && !@user.last_name.blank? %>
                <div class="workspace_navs_divs">
                    <%= link_to 'My Profile', user_path(@user) %><br>
                    <%= system_users_if_admin?(@user) %>
                </div>

                <div class="workspace_navs_divs">
                    <%= link_to 'New Customer', new_customer_path %><br>
                    <%= service_customers %><br>
                    <%= link_to 'Customers with Service Insurance', service_insurance_path %>
                </div>

                <div class="workspace_navs_divs">
                    <% if current_user.admin %>
                        <%= link_to 'New Vehicle Service', new_service_path %><br>
                    <% end %>
                    <%= vehicle_services %>
                </div>

                <div class="workspace_navs_divs">
                    <%= service_appointments %>
                </div>

                <div>
                    <% if current_user.admin && current_user.sys_role == "Super User" %>
                        <%= link_to 'Dealer Information', edit_dealer_path(dealer), :title => 'Edit Dealer Info' %>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>


