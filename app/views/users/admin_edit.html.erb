<div class="main-container">
    <div class="main-data">
        <h2>Edit User - Admin</h2>

        <% if @user.errors.any? %>
            <div id="error_explanation">
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        
        <%= form_for(@user) do |f| %>    
            <% if @user != current_user %>
                <%= f.text_field :full_name, size: 30, :style => "background: #f0f0f5", :readonly => true %>
                <%= f.text_field :email, size: 25, :style => "background: #f0f0f5", :readonly => true %>
            <% else %>
                <%= f.text_field :full_name, size: 30, :style => "background: #f0f0f5", :readonly => true %>
                <%= f.text_field :email, size: 25 %>
            <% end %>

            <% if @user != current_user %>
                <%= f.select :sys_role, user_sys_role %>
                <%= f.select :status, user_status %>
                <%= f.check_box :admin %>
                <%= f.label 'Admin' %>
            <% end %>

            <%= f.submit %>
        <% end %>
    </div>

    <div class="bottom-navs">
        <span style="margin-right: 5px"><%= user_workspace %></span>
        <span style="margin-right: 5px"><%= system_users_if_admin?(current_user) %></span>
    </div>
</div>